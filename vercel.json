{
  "version": 2,
  "name": "my-personal-blog",
  "builds": [
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    { "source": "/home", "destination": "/" },
    { "source": "/blog/posts", "destination": "/blog" }
  ]
}
